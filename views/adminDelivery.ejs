<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../public/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="../public/css/adminView.css" />
    <script src="../public/js/bootstrap.bundle.min.js"></script>
    <script src="../public/js/adminViewSales.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <title>Administrator</title>
</head>

<body data-bs-theme="light">
    <div class="dashBoard text-center align-items-center justify-content-center">
        <button class="btn" onclick="goSales()">Sales History</button>
        <button class="btn" onclick="goRecords()">Delivery Transactions</button>
        <button class="btn" onclick="goInventory()">Product Inventory</button>
        <button class="btn" onclick="goDashboard()">Dashboard</button>
        <h1>SALES</h1>
        <!-- <button class="btn" onclick="showAddModal()">ADD DELIVERY</button> -->
        <div class="tableCont text-center align-items-center justify-content-center">
            <!--TRANSACTIONS-->
            <table class="table text-center align-items-center justify-content-center">

                <tr>
                    <th>Delivery Item</th>
                    <th>Delivery Status</th>
                    <th>Notes</th>
                    <th>Update Delivery</th>
                </tr>
                <tr>
                    <td>1,000,000</td>
                    <td>1,000,000</td>
                    <td><button class="btn">EDIT</button></td>
                </tr>
            </table>
        </div>
    </div>

    <div id="updateModal" class="modal fade align-items-center justify-content-center" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <div class="row align-items-center justify-content-center w-100">
                <h2 class="modal-title text-center">Update Delivery Status</h2>
              </div>
            </div>
            <div class="modal-body text-center align-items-center justify-content-center">
                <label for="itemDelivery">Item Delivered</label>
                <input type="text" id="itemDelivery">
                <br>
                <label for="notes">Notes:</label>
                <input type="text" id="notes">
                <br>
                <label for="deliOrNot">Delivered?</label>
                <br>
                <input type="radio" name="deliOrNot" id="deliv0" value="0" onchange="changeDeliveryStatus()">
                <label for="deliOrNot">Yes</label>
                <input type="radio" name="deliOrNot" id="deliv1" value="1" onchange="changeDeliveryStatus()">
                <label for="deliOrNot">No</label>
            <div class="modal-footer align-items-center justify-content-center">
              <button class="btn btn-primary" onclick="cancelAdd()">Cancel</button>
              <button class="btn btn-primary" onclick="saveAdd()">Save Sale</button>
            </div>
    
          </div>
        </div>
    </div>
</body>

</html>