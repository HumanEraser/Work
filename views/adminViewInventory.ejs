<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="../public/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="../public/css/adminView.css" />
    <script src="../public/js/bootstrap.bundle.min.js"></script>
    <script src="../public/js/adminViewInventory.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <title>Administrator</title>
</head>

<body data-bs-theme="light" onload="init()">
    <div class="dashBoard text-center align-items-center justify-content-center">
        <button class="btn" onclick="goSales()">Sales History</button>
        <button class="btn" onclick="goRecords()">Delivery Transactions</button>
        <button class="btn" onclick="goInventory()">Product Inventory</button>
        <button class="btn" onclick="goDashboard()">Dashboard</button>
        <div class="text-center col m-1 mt-4 mb-4">
          <div class="text-center justify-content-center align-items-center row m-1">
            <span class="col-2" name="toDark">Search</span><input id="searchText" onchange="formatTable()"
              class="bg-white text-dark col form-control">
            <div class="col-2">
              <select id="searchField" class="col-2 form-select" name="toDark">
                <option> Test</option>
              </select>
            </div>
          </div>
        </div>
        <h1>INVENTORY</h1>
        <button class="btn" onclick="showAddModal()">ADD ITEM</button>
        <div class="tableCont text-center align-items-center justify-content-center">
            <!--TRANSACTIONS-->
            <table class="table text-center align-items-center justify-content-center">
              <thead>
                <tr id="tableHead">
                    <th>Item Id</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Unite Of Measurement</th>
                    <th>Option</th>
                </tr>
              </thead>
              <tbody id="tableBody">
                <tr id="tableBody">
                  <td>1,000,000</td>
                  <td>1,000,000</td>
                  <td>1,000,000</td>
                  <td>1,000,000</td>
                  <td>1,000,000</td>
                  <td><button class="btn">EDIT</button></td>
              </tr>
              </tbody>

            </table>
        </div>
    </div>

    <div id="addModal" class="modal fade align-items-center justify-content-center" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <div class="row align-items-center justify-content-center w-100">
                <h2 class="modal-title text-center">ADD ITEM</h2>
              </div>
            </div>
            <div class="modal-body text-center align-items-center justify-content-center">
              <label for="inProductId">Product Name:</label>
              <input type="text" id="inProductId">
              <br>
              <label for="inVariant">Variant &#40;if applicable&#41;</label>
              <select name="inVariant" id="inVariant">
                <option value="noVariant" selected>No Variant</option>
                <option value="variant1">variant 1</option>
                <option value="variant2">variant 2</option>
                <option value="variant3">variant 3</option>
              </select>
              <br>
              <label for="inCategory">Category</label>
              <input type="text" id="inCategory">
              <br>
              <label for="inPPI">Price Per Item</label>
              <input type="text" id="inPPI">
              <br>
              <label for="inUM">Unit of Meassurement &#40;if applicable&#41;</label>
              <input type="text" id="inUM">
              <br>
            <div class="modal-footer align-items-center justify-content-center">
              <button class="btn btn-primary" onclick="cancelAdd()">Cancel</button>
              <button class="btn btn-primary" onclick="saveAdd()">Save Sale</button>
            </div>
    
          </div>
        </div>
    </div>
</body>

</html>