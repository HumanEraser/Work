<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/css/adminView.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/secretary.css" />
    <script src="../public/js/bootstrap.bundle.min.js"></script>
    <script src="../public/js/secretary.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <title>Administrator</title>
</head>

<body data-bs-theme="light" onload="init()">
    <div class="containerDiv text-center justify-content-center align-items-center">
        <h1>Inventory</h1>
        <div class="text-center col m-1 mt-4 mb-4">
            <div class="text-center justify-content-center align-items-center row m-1">
                <span class="col-2" name="toDark">Search</span><input id="searchText" onchange="searchInvent()"
                    class="bg-white text-dark col form-control" placeholder="Search Item">
                <div class="col-2">
                    <select id="searchField" class="col-2 form-select" name="toDark">
                        <option> Test</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="checkAwt">
            <button class="btn btn-primary" onclick="toCheckOut()">Check Out</button>
        </div>
        <br>
        <div class="conteyner">
            <div class="itemListCont" id="itemList">

            </div>

            <div class="orderedItems">
                <p>Ordered Items</p>

                <div class="item">
                    <table style="width: 100%;">
                        <tr>
                            <th>Item Name</th>
                            <th>Type</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Options</th>
                        </tr>
                        <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(function(item,index) { %>
                        <tr>
                            <td><%= item.itemName %></td>
                            <td><%= item.type %></td>
                            <td><%= item.quantity %></td>
                            <td><%= item.price %></td>
                            <td><button class="btn btn-primary" onclick=<%-'"removeItem('+index+')"'%>>Remove</button>
                            </td>
                        </tr>
                        <% }) %>
                        <% } %>
                    </table>
                </div>
            </div>

        </div>

    </div>

    <div class="contDivCart" id="orderList">

    </div>

    <div id="addModal" class="modal fade align-items-center justify-content-center" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header w-100">
                    <div class="row align-items-center justify-content-center w-100">
                        <h2 class="h2mod modal-title text-center w-100" id="itemName">ADD SALES</h2>
                    </div>
                </div>
                <div class="admudal modal-body text-center align-items-center justify-content-center">
                    <div class="typeSelector">
                        <table class="tabol mb-3">
                            <tr>
                                <th>Type</th>
                                <th>Stock</th>
                                <th>Price</th>
                                <th>Options</th>
                            </tr>
                            <tbody>
                                <tr>
                                    <td>202</td>
                                    <td id="202Stock">0</td>
                                    <td id="202Price">0</td>
                                    <td><input type="radio" id="202id" name="fav_language" value="202"></td>
                                </tr>
                                <tr>
                                    <td>304</td>
                                    <td id="304Stock">0</td>
                                    <td id="304Price">0</td>
                                    <td><input type="radio" id="304id" name="fav_language" value="304"></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    <input id="orderCount" class="inputOrder text-center  w-25" type="number" value="0">
                    <div class="modal-footer align-items-center justify-content-center">
                        <button class="btn btn-primary" onclick="cancelAdd()">Cancel</button>
                        <button class="btn btn-primary" onclick="saveAdd()">Save Sale</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="checkOutModal" class="modal fade align-items-center justify-content-center" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header w-100">
                    <div class="row align-items-center justify-content-center w-100">
                        <h2 class="h2mod modal-title text-center w-100" id="itemName">ADD SALES</h2>
                    </div>
                </div>
                <div class="modal-body text-center align-items-center justify-content-center">
                    <label for="customerName">Customer Name (OPTIONAL)</label>
                    <input type="text" id="customerName" name="customerName">
                    <br>
                    <label for="proofImage">Upload Image</label>
                    <input type="text" id="proofImage" name="proofImage">
                    <hr>
                    <label for="Deliver">Delivery</label>
                    <input type="checkbox" onchange="openDeliveryThing()" id="deliver" name="deliver" value="deliver">
                    <br>
                    <div class="ifDeli" id="ifDeliver" style="display: none;">
                        <label for="Address">Address</label>
                        <input type="text" id="address" name="address">
                        <br>
                        <label for="SF">Shipping Fee</label>
                        <br>
                        <input type="text" id="sf" name="sf">
                        <br>
                    </div>
                    <label for="Disount">Discount</label>
                    <input type="text" id="discount" name="discount">
                    <div class="modal-footer align-items-center justify-content-center">
                        <button class="btn btn-primary" onclick="cancelOut()">Cancel</button>
                        <button class="btn btn-primary" onclick="checkOutBtn()">Save Sale</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>

</html>